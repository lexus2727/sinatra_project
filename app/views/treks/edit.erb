<h2>Edit Your Trek</h2>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>
<form action="/treks/<%= @trek.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="name">Trip Name: </label>
  <input type="text" name="name" value="<% @trek.name %>" placeholder="name">
  <br>
  <label for="location">Trip Location: </label>
  <input type="text"  name="location" value="<% @trek.location %>" placeholder="location">
  <br>
  <input type="submit" class="btn btn-default" value="Submit">
  <button type="button" class="btn btn-default" name="cancel"><a href="/treks/<%= @trek.id %>">Cancel</a></button>
</form>
