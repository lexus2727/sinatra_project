<h3>Create a Trip Below:</h3>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<form action="/treks" method="post">
  <label for="name">Trek Name: </label>
  <input type="text" class="form-control" name="name" placeholder="name">
  <br>
  <label for="location">Trek Location: </label>
  <input type="text" class="form-control" name="location" placeholder="location">
  <br>
  <input type="submit" class="btn btn-default" value="Create Trek">
  <button type="button" class="btn btn-default" name="cancel"><a href="/treks">Cancel</a></button>
</form>